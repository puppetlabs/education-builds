class apache {
  File {
    owner => 'apache',
    group => 'apache',
    mode  => 0644,
  }
  package {'httpd':
    ensure => present,
  }
  service {'httpd':
    ensure    => running,
    require   => Package['httpd'],
    subscribe => File['/var/www/html/index.html'],
  }
  file { '/var/www':
    ensure => directory,
  }
  file { '/var/www/html':
    ensure => directory,
  }
  file { '/var/www/html/index.html':
    ensure => file,
    source => 'puppet:///modules/apache/index.html',
  }
}
