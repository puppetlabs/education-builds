define apache::vhost (
  $port,
  $docroot,
  $docowner,
  $docgroup,
  $confdir,
  $priority = '10',
  $options = "Indexes MultiViews",
  $vhost_name = $name,
  $servername = $name,
){
  file { "${confdir}/${name}.conf":
    ensure => present,
    owner => $docowner,
    group => $docgroup,
    mode => '0644',
    content => template("apache/vhost.conf.erb"),
  }
}
