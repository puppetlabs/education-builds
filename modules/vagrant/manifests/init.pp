class vagrant {
  # Vagrant public key
  # https://raw.github.com/mitchellh/vagrant/master/keys/vagrant.pub

 $pub_key = ''

  user { 'vagrant':
    ensure => present,
  }

  ssh_authorized_key { 'vagrant public key':
    ensure => present,
    key    => $vagrant_key,
    name   => 'vagrant insecure public key',
    user   => 'vagrant',
    type   => 'ssh-rsa',
  }
}
