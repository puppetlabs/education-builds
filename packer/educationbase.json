{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{user `ks_file`}}.cfg<enter>"
      ],
      "ssh_pty":  "true",
      "disk_size": "{{ user `vm_disk_size` }}",
      "disk_type_id": "0",  
      "guest_os_type": "{{ user `guest_os_type` }}",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "iso_url": "{{ user `iso_url` }}",
      "output_directory": "output/{{ user `vm_type` }}-base-vmware",
      "shutdown_command": "sudo shutdown -P now",
      "ssh_username": "training",
      "ssh_password": "training",
      "skip_compaction": "true",
      "ssh_wait_timeout": "10000s",      
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "{{user `vm_type`}}-base",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{user `vm_memsize`}}",
        "numvcpus": "{{user `vm_cores`}}",
        "rtc.diffFromUTC": "0"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["sudo mkdir -p /training/file_cache;sudo chown -R training:training /training"]
    },
    {
      "type": "file",
      "source": "../file_cache/",
      "destination": "/training/file_cache"
    },
    {
      "type": "shell",
      "inline": ["mv /training/file_cache/installers/puppet-enterprise-{{user `pe_version`}}-el-7-x86_64.tar.gz /tmp/puppet-enterprise.tar.gz"]
    },
    {
      "execute_command": "{{.Vars}} sudo \"PATH=$PATH\" -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/base.sh",
        "scripts/sshd.sh",
        "scripts/pre_build.sh",
        "scripts/{{ user `vm_type` }}_pre_build.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "hostname": "training",
    "arch": "i386",
    "iso_checksum": "f3aa74fd6ddc7b14ed4cf81db8135aee57814791",
    "iso_url": "http://mirrors.kernel.org/centos/6.7/isos/i386/CentOS-6.7-i386-bin-DVD1.iso",
    "ks_file": "ks.cfg",
    "os_name": "CentOS-6.7",
    "guest_os_type": "centos",
    "rubylib": "/usr/src/puppet/lib:/usr/src/facter/lib:/usr/src/hiera/lib",
    "system_user": "training",
    "system_user_password": "training",
    "training_branch": "master",
    "training_repo": "https://github.com/puppetlabs/puppetlabs-training-bootstrap.git",
    "vm_type": "training",
    "vm_memsize": "4096",
    "vm_disk_size": "20480",
    "vm_cores": "2",
    "ptb_version": "4.0"
  }
}
